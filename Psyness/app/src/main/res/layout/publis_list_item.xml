<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txtnombredeperfir"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@+id/imageView3"
        android:fontFamily="@font/nunito_medium"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.371"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Nombre"></TextView>

    <TextView
        android:id="@+id/txdia"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="3dp"
        android:fontFamily="@font/nunito_medium"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/txtpubli"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/txthora"
        app:layout_constraintTop_toBottomOf="@+id/txtnombredeperfir"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Fecha"></TextView>

    <TextView
        android:id="@+id/txthora"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="3dp"
        android:layout_toStartOf="@+id/txdia"
        android:layout_toEndOf="@+id/imageView3"
        android:fontFamily="@font/nunito_medium"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/txtpubli"
        app:layout_constraintTop_toBottomOf="@+id/txtnombredeperfir"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="47dp"
        tools:text="Hora"></TextView>


    <TextView
        android:id="@+id/txtpubli"
        android:layout_width="336dp"
        android:layout_height="120dp"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/nunito_medium"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. In ultricies mauris in dui tempor eleifend. Donec condimentum turpis erat, non euismod nunc tincidunt quis. Nulla metus neque, condimentum non feugiat sed, maximus et odio. Fusce nunc nunc, ornare dignissim sem sed, egestas mattis libero. ."></TextView>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="47dp"
        android:layout_height="53dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="7dp"
        android:src="@drawable/profilesidebar3"
        app:layout_constraintBottom_toTopOf="@+id/txtpubli"
        app:layout_constraintEnd_toStartOf="@+id/txtnombredeperfir"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"></ImageView>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/imageView8"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="4dp"
        android:layout_weight="1"
        android:src="@drawable/corazon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.123"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtpubli"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>